<TabItem x:Class="CognitivePlayground.View.CameraTabItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CognitivePlayground.View"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             Header="{Binding Title}"
          DataContext="{Binding CameraTabViewModel, Source={StaticResource Locator}}">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
            <TextBox Text="{Binding CameraAddress}" />
            <Button Command="{Binding StartCommand}" Content="Start capturing" />
            </StackPanel>
            <Image Source="{Binding Image}"/>
        </StackPanel>
    </Grid>
</TabItem>